
{
    "exclude": [
      "./tests",
      "./node_modules",
      "./dist"
    ],
      "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true
      }
   }